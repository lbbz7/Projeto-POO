<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projetopoo.controllers.AdminServicesController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Gerenciar Serviços">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="servicesTable" prefHeight="250.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="nomeColumn" prefWidth="150.0" text="Nome" />
                <TableColumn fx:id="descricaoColumn" prefWidth="250.0" text="Descrição" />
                <TableColumn fx:id="precoColumn" prefWidth="100.0" text="Preço" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <VBox spacing="10.0" prefWidth="600.0">
            <children>
                <TextField fx:id="nomeField" promptText="Nome do Serviço" />
                <TextArea fx:id="descricaoField" promptText="Descrição do Serviço" prefHeight="50.0" />
                <TextField fx:id="precoField" promptText="Preço do Serviço" />
            </children>
        </VBox>
        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Button fx:id="addButton" onAction="#handleAddService" text="Adicionar" />
                <Button fx:id="updateButton" onAction="#handleUpdateService" text="Atualizar" />
                <Button fx:id="deleteButton" onAction="#handleDeleteService" text="Remover" />
                <Button fx:id="backButton" onAction="#handleBackButton" text="Voltar" />
            </children>
        </HBox>
    </children>
</VBox>